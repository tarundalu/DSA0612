# Load necessary libraries
library(ggplot2)
library(reshape2)

# Create the dataset
data <- data.frame(
  Category = c("Product Quality", "Customer Service", "Value for Money"),
  Very_Dissatisfied = c(5, 10, 8),
  Dissatisfied = c(15, 20, 12),
  Neutral = c(25, 30, 28),
  Satisfied = c(35, 25, 32),
  Very_Satisfied = c(20, 15, 20)
)

# Melt the dataset for plotting
data_melted <- melt(data, id.vars = "Category", variable.name = "Satisfaction_Level", value.name = "Count")

# Create the stacked bar plot
ggplot(data_melted, aes(x = Category, y = Count, fill = Satisfaction_Level)) +
  geom_bar(stat = "identity") +
  labs(title = "Customer Satisfaction Ratings",
       x = "Category",
       y = "Count",
       fill = "Satisfaction Level") +
  theme_minimal() +
  scale_fill_brewer(palette = "Paired")
